{
  "name": "fitfab-ui",
  "version": "2.1.1",
  "description": "fitfab UI elements",
  "sideEffects": false,
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "rollup -c",
    "build": "npm run build:types && npm run build:js",
    "prebuild": "rm -rf lib",
    "dev": "npm run storybook | rollup -c --watch",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest --config jest.config.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fitfab/fitfab-ui.git"
  },
  "keywords": [],
  "author": "Miguel Julio <migueljulio.developer.com> (http://fitfab.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fitfab/fitfab-ui/issues"
  },
  "homepage": "https://github.com/fitfab/fitfab-ui#readme",
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "@babel/preset-typescript": "7.3.3",
    "@storybook/addon-actions": "6.0.19",
    "@storybook/addon-docs": "^6.0.19",
    "@storybook/addon-knobs": "6.0.19",
    "@storybook/addon-links": "6.0.19",
    "@storybook/addons": "6.0.19",
    "@storybook/react": "6.0.19",
    "@testing-library/react": "8.0.6",
    "@types/jest": "24.0.15",
    "@types/react": "16.8.23",
    "@types/react-dom": "16.8.5",
    "@types/styled-components": "^4.1.19",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/eslint-plugin-tslint": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "babel-loader": "8.0.6",
    "babel-plugin-styled-components": "1.10.6",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.3.0",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^4.2.5",
    "jest": "24.8.0",
    "jest-dom": "3.5.0",
    "lint-staged": "^10.2.13",
    "prettier": "^1.18.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "rollup": "^1.31.1",
    "rollup-plugin-analyzer": "^3.2.2",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "standard-version": "6.0.1",
    "styled-components": "^4.4.0",
    "ts-jest": "24.3.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.3"
  },
  "peerDependencies": {
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.1.3"
  },
  "husky": {
    "hooks": {
        "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
      "*.{js,ts,tsx}": [
          "npm run lint"
      ]
  }
}
